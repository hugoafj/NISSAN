<Alloy>
	<Window id="win" class="container">
		<View class="titleBar">
			<Label class="loginTitle">Registro</Label>
		</View>
		<ScrollView class="loginContent">
			<Label class="emailLabel">Nombre</Label>
			<TextField id="nombre" class="emailTxt"/>
			<Label class="emailLabel">Facebook y/o e-mail</Label>
			<TextField id="email" class="emailTxt"/>
			<Label class="emailLabel">Auto</Label>
			<TextField id="auto" class="emailTxt"/>
			<Label class="emailLabel">Cumpleaños</Label>
			<TextField id="cumple" class="emailTxt" hintText="dd/mm/aaaa"/>
			<Label class="emailLabel">Evento Favorito</Label>
			<TextField id="evento1" class="emailTxt"/>
			<Label class="emailLabel">Contraseña</Label>
			<TextField id="pass" class="emailTxt"/>
			<Label class="emailLabel">Confirmar Contraseña</Label>
			<TextField id="passConf" class="emailTxt"/>
			<View height="50">
				<Button class="regButton" onClick="cancelar"></Button>
				<Button class="submitButton" onClick="finalizar"></Button>
			</View>
		</ScrollView>
	</Window>
</Alloy>